<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="supercodingidea.klchen.quickfitsettingmenu.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ToolButton"
        android:focusableInTouchMode="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="0dp"
        android:measureWithLargestChild="false"
        android:gravity="top|bottom"
        android:weightSum="1"
        android:visibility="visible"
        android:baselineAligned="false"
        android:background="#e5e5e5"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:text="@string/tool_functions"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.03"
            android:textSize="22sp"
            android:layout_marginTop="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_account"
            android:id="@+id/userInfo"
            android:textColor="@color/abc_btn_colored_borderless_text_material"
            android:textStyle="bold"
            android:textSize="25sp"
            android:typeface="serif"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="45dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settin_tool"
            android:id="@+id/settinTool"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:textStyle="bold"
            android:typeface="serif"
            android:textColor="@color/abc_btn_colored_borderless_text_material" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            android:id="@+id/logout"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:singleLine="false"
            android:textStyle="bold"
            android:typeface="serif"
            android:textColor="@color/abc_btn_colored_borderless_text_material" />
    </LinearLayout>
</RelativeLayout>
